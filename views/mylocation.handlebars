<h2>{{location_name}}</h2>
<a href="/trip/{{trip.id}}/packlist">
    <button type="button" class="btn btn-info" id="pack-list">Packing List</button>
</a>
<a href="/trip/{{trip.id}}/journal">
<button type="button" class="btn btn-info" id="journal">Journal</button>
</a>
<div class="row">Address: {{location_address}}</div>
<div class="row">Contact Info: {{contact}}</div>
<div class="row">Arrive on {{start_date}}</div>
<div class="row">Leave on {{end_date}}</div>
<div class="row">Travel by {{vehicle}}</div>
{{#if transit_details}}
<div class="row">Travel notes: {{transit_details}}</div>
{{/if}}
<div class="row">Activities: {{location_activities}}</div>
<a href="/trip/{{trip.id}}">
    <button type="button" class="btn btn-info">Back to {{trip.name}}</button>
</a>
<button type="button" class="btn btn-success">Add location</button>