{{!-- user clicks on a trip's journal --}}
<h2>My journal for {{name}} </h2>
<a href="/trip/{{id}}/packlist">
    <button type="button" class="btn btn-info" id="pack-list">Packing List</button>
</a>
{{#each journals as |journal|}}
<div class = "row">
    <div class = "col">
        {{journal.title}} : {{journal.content}}
    </div>
</div>
{{/each}}
<a href="/trip/{{id}}">
    <button type="button" class="btn btn-info">Back to {{name}}</button>
</a>
<button type="button" class="btn btn-success">Add Journal Entry</button>